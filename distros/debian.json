{
    "name":"Debian/Ubuntu",
    "installer": "apt install -y",
    "services" : "systemctl enable ",
    "identify" : "apt -v",
    "base" : ["xorg","xinit","pipewire","pipewire-audio","pipewire-pulse","firmware-iwlwifi","bluez","blueman","network-manager"],
    "pre" : ["dpkg --add-architecture i386","apt update -y","apt upgrade -y"],
    "post" : ["systemctl enable bluetooth","systemctl set-default graphical.target"],
    "GD" : [
        {
            "name" : "AMD",
            "packages" : ["xserver-xorg-video-amdgpu"]
        },
        {
            "name" : "Intel",
            "packages" : ["xserver-xorg-video-intel"]
        },
        {
            "name" : "Nvidia",
            "packages" : ["xserver-xorg-video-nouveau"]
        },
        {
            "name" : "VM",
            "packages" : ["xserver-xorg-video-vesa"]
        }
    ],
    "DM":[
        {
            "name":"GDM",
            "service":"gdm.service",
            "packages":["gdm3"]
        },
        {
            "name":"LightDM",
            "service":"lightdm.service",
            "packages":["lightdm","lightdm-gtk-greeter"]
        },
        {
            "name":"SDDM",
            "service": "sddm.service",
            "packages" : ["sddm"]
        }
    ],
    "DE":[
        {
            "name":"Awesome",
            "DM":"LightDM",
            "packages": ["awesome","pcmanfm"],
            "preconf": []
        },
        {
            "name":"Budgie",
            "DM":"LightDM",
            "packages":["budgie-desktop"],
            "preconf": []
        },
        {
            "name":"Cinnamon",
            "DM":"LightDM",
            "packages":["task-cinnamon-desktop"],
            "preconf": []
        },
        {
            "name":"Cutefish",
            "DM":"LightDM",
            "packages":["cutefish-core"],
            "preconf": []
        },
        {
            "name":"GNOME",
            "DM":"GDM",
            "packages":["task-gnome-desktop"],
            "preconf": []
        },
        {
            "name":"GNOME-Flashback",
            "DM":"GDM",
            "packages":["task-gnome-desktop-flashback"],
            "preconf": []
        },
        {
            "name":"KDE Plasma",
            "DM":"SDDM",
            "packages":["kde-full"],
            "preconf": []
        },
        {
            "name":"LXDE",
            "DM":"LightDM",
            "packages":["lxde", "task-lxde-desktop"],
            "preconf": []
        },
        {
            "name":"LXQT",
            "DM":"LightDM",
            "packages":["task-lxqt-desktop","breeze-icon-theme","oxygen-icon-theme"],
            "preconf": []
        },
        {
            "name":"MATE",
            "DM":"LightDM",
            "packages":["task-mate-desktop ","mate-desktop-environment-extras"],
            "preconf": []
        },
        {
            "name":"XFCE",
            "DM":"LightDM",
            "packages":["task-xfce-desktop"],
            "preconf": []
        }
    ]
}